<h1>Create Your Account</h1>

<p>Join the NYC Safety Alert community to report and stay informed about safety incidents in your area.</p>

{{#if error}}
<div class="error">
    {{error}}
</div>
{{/if}}

<form method="POST" action="/signup" class="auth-form">
    <div class="form-group">
        <label for="email">Email Address:</label>
        <input 
            type="email" 
            id="email" 
            name="email" 
            placeholder="your.email@example.com"
            value="{{email}}"
            required
        >
    </div>

    <div class="form-group">
        <label for="username">Username (Display Name For Other Users):</label>
        <input 
            type="text" 
            id="username" 
            name="username" 
            placeholder="Choose a username"
            value="{{username}}"
            required
        >
    </div>

    <div class="form-group">
        <label for="location">Location (Optional):</label>
        <select id="location" name="location">
            <option value="">Select your borough...</option>
            <option value="Manhattan" {{#equals location "Manhattan"}}selected{{/equals}}>Manhattan</option>
            <option value="Brooklyn" {{#equals location "Brooklyn"}}selected{{/equals}}>Brooklyn</option>
            <option value="Queens" {{#equals location "Queens"}}selected{{/equals}}>Queens</option>
            <option value="Bronx" {{#equals location "Bronx"}}selected{{/equals}}>Bronx</option>
            <option value="Staten Island" {{#equals location "Staten Island"}}selected{{/equals}}>Staten Island</option>
        </select>
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input 
            type="password" 
            id="password" 
            name="password" 
            placeholder="Choose a strong password"
            required
        >
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password:</label>
        <input 
            type="password" 
            id="confirmPassword" 
            name="confirmPassword" 
            placeholder="Re-enter your password"
            required
        >
    </div>

    <input type="submit" value="Sign Up" class="btn-primary">
</form>

<p class="auth-redirect">
    Already have an account? <a href="/login">Login here!</a>
</p>