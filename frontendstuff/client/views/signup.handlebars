<h1>Create Your Account</h1>

<p>Join the NYC Safety Alert community to report and stay informed about safety incidents in your area.</p>

{{
#if
 error}}
<div class="error">
    {{error}}
</div>
{{
/if
}}

<form method="POST" action="/signup" class="auth-form">
    <div class="form-group">
        <label for="email">Email Address:</label>
        <input 
            type="email" 
            id="email" 
            name="email" 
            placeholder="your.email@example.com"
            value="{{email}}"
            required
        >
    </div>

    <div class="form-group">
        <label for="username">Username (Display Name For Other Users):</label>
        <input 
            type="text" 
            id="username" 
            name="username" 
            placeholder="Choose a username"
            value="{{username}}"
            required
        >
    </div>

    <div class="form-group">
        <label for="location">Location (Optional):</label>
        <select id="location" name="location">
            <option value="">Select your borough...</option>
            <option value="Manhattan" {{
#if
 (equals location "Manhattan")}}selected{{
/if
}}>Manhattan</option>
            <option value="Brooklyn" {{
#if
 (equals location "Brooklyn")}}selected{{
/if
}}>Brooklyn</option>
            <option value="Queens" {{
#if
 (equals location "Queens")}}selected{{
/if
}}>Queens</option>
            <option value="Bronx" {{
#if
 (equals location "Bronx")}}selected{{
/if
}}>Bronx</option>
            <option value="Staten Island" {{
#if
 (equals location "Staten Island")}}selected{{
/if
}}>Staten Island</option>
        </select>
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input 
            type="password" 
            id="password" 
            name="password" 
            placeholder="Choose a strong password"
            required
        >
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password:</label>
        <input 
            type="password" 
            id="confirmPassword" 
            name="confirmPassword" 
            placeholder="Re-enter your password"
            required
        >
    </div>

    <input type="submit" value="Sign Up" class="btn-primary">
</form>

<p class="auth-redirect">
    Already have an account? <a href="/login">Login here!</a>
</p>