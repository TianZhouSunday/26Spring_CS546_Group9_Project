<div class="auth-container">
    <h1>Create an Account</h1>

    {{#if error}}
    <p class="error" style="text-align:center; margin-bottom:15px;">{{error}}</p>
    {{/if}}

    <form id="signup-form" method="POST" action="/signup" novalidate>
        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" name="username" type="text" required placeholder="Choose a username">
            <span id="username-error" class="error"></span>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" required placeholder="name@example.com">
            <span id="email-error" class="error"></span>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" required placeholder="Create a password">
            <span id="password-error" class="error"></span>
        </div>

        <div class="form-group" style="display: flex; align-items: flex-start; gap: 10px; margin-top: 15px;">
            <input type="checkbox" id="hideSensitiveContent" name="hideSensitiveContent"
                style="width: 20px; height: 20px; margin-top: 2px;">
            <div>
                <label for="hideSensitiveContent" style="display:inline; font-weight:normal; cursor:pointer;">Hide
                    Sensitive Content</label>
                <p style="font-size: 0.85rem; color: #666; margin-top: 2px;">Check this to blur/hide sensitive posts by
                    default.</p>
            </div>
        </div>

        <button type="submit" class="button-primary auth-button">Sign Up</button>
    </form>

    <div class="form-footer">
        Already have an account? <a href="/login">Login here</a>
    </div>
</div>

<script src="/src/login_forms.js"></script>