<h1>Create an Account</h1>

{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}

<form id="signup-form" method="POST" action="/signup" novalidate>

    <label for="username">Username:</label>
    <input id="username" name="username" type="text" required>
    <span id="username-error" class="error"></span>

    <label for="email">Email:</label>
    <input id="email" name="email" type="email" required>
    <span id="email-error" class="error"></span>

    <label for="password">Password:</label>
    <input id="password" name="password" type="password" required>
    <span id="password-error" class="error"></span>

    <div class="checkbox-container">
        <label for="hideSensitiveContent">Hide Sensitive Content:</label>
        <input type="checkbox" id="hideSensitiveContent" name="hideSensitiveContent">
    </div>
    <span class="hint">Check this to blur/hide sensitive posts by default.</span>

    <button type="submit">Create Account</button>
</form>

<script src="/src/login_forms.js"></script>